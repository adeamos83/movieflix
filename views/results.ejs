<div class="row make-center">
    <% data["results"].forEach(function(movie){ %>
    <div class="col-md-4" style="margin-bottom: 30px">
         <div class="card-deck box-shadow" style="max-width:344px">
          <div class="card" style="max-height: 532px; overflow-y: scroll">
            <img class="card-img-top" src="http://image.tmdb.org/t/p/w342<%=movie["poster_path"]%>" alt="Card image cap" style="max-width: 342px; max-height: 75%">
            <div class="card-body">
              <h5 class="card-title"><%= movie["title"] %></h5>
              <p class="card-text"><%=movie["overview"].substr(0, 150)%>...</p>
              <p class="card-text"><small class="badge badge-warning">Release Date: <%= movie["release_date"].substr(0,4) %></small></p>
            </div>
          </div>
        </div>    
    </div>
